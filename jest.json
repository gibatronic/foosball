{
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "globals": {
        "ts-jest": {
            "isolatedModules": true
        }
    },
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "source",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    }
}
